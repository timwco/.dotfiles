[user]
	name = Tim Whitacre
	email = tim@argyllstudios.com
[github]
  user = twhitacre
[hub]
  protocol = https
[core]
	pager = less -FRSX
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = vim
  autocrlf = input
  safecrlf = true
[advice]
  statusHints = false
[web]
  browser = open
[push]
  config = default
  default = tracking
[rebase]
  autosquash = true
[merge]
  summary = true
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green
[color "diff"]
  meta = blue
  frag = magenta
  old  = red
  new  = green
[color "status"]
  added = yellow
  changed = green
  untracked = blue
[alias]
  a       = add -u
  aa      = add --all :/
  ap      = add -u -p
  b       = browse
  c       = commit -v
  co      = checkout
  d       = diff
  ds      = diff --staged
  dw      = diff --color-words
  po      = push origin head
  pr      = "!f() { git fetch origin refs/pull/$1/head:pr/$1 && git co pr/$1; } ; f"
  s       = status
  sm      = submodule
  smu     = submodule foreach git pull origin master
  td      = merge --no-ff
  up      = "!git fetch upstream && git rebase upstream/master"
  w       = whatchanged --decorate
  wp      = whatchanged --decorate -p
  l = log --pretty='format:%C(yellow)%h %C(blue)%ad %C(reset)%s%C(red)%d %C(green)%an%C(reset), %C(cyan)%ar' --date=short
[ghi]
	token = !security find-internet-password -a twhitacre -s github.com -l 'ghi token' -w
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
