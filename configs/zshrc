# Auto Switching for Node via `n` 
autoload -U add-zsh-hook
check-node-version() {
  if    [ -e ".nvmrc" ] \
     || [ -e ".node-version" ] \
     || [ -e ".n-node-version" ]; then
      echo "Checking Node Version..."
      n auto
  fi;
}
add-zsh-hook chpwd check-node-version
check-node-version

