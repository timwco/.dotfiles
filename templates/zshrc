#
# Executes commands at the start of an interactive session.
#

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Aliases
alias subl='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl'
alias gogo='~/Developer/go/src/github.com/twhitacre'
alias proj='~/Projects'
alias term='itermocil'
alias pyserver='python -m SimpleHTTPServer 9000'
alias weather='curl -4 wttr.in/Atlanta'
alias v='vim .'
alias yolo='git push origin master && git push heroku master'
alias ace='./ace'
alias dot='~/.dotfiles'

alias do_personal='ssh root@104.131.24.10'
alias do_projects='ssh tim@159.203.91.123'
alias do_produce='ssh tim@107.170.89.24'

# Git Shortcuts
alias gp="git push origin"
alias gc="git commit"
alias ga="git add ."
alias gs="git status"

# Waiting Dots
COMPLETION_WAITING_DOTS="true"

# The Rubies
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

# Golang Settings
export GOPATH=$HOME/Developer/go
export GOROOT=/usr/local/opt/go/libexec
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:$GOROOT/bin

# Iron Yard Specific Stuff
alias iron='~/TIY'
alias nl='newline_catalog'
